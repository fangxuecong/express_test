<% include _head %>
<!-- ================================================================ -->
<div id="container">
  <header>
    <h1>
      <a id="logo" href="/" title="Node.js起始页">Node.js</a>
    </h1>
  </header>
  
  <div class="content container clearfix">
    <div class="formWrap">
      <form id="signUp" method="post" action="">
        <ul class="form">
          <li>
            <label>用户名</label>
            <input type="text" name="fname" class="validate[minSize[6]]">
          </li>
          <li>
            <label>请输入密码</label>
            <input id="pw1" type="password" class="validate[required,minSize[3]]">
            <input type="hidden" name="fpassword" />
          </li>
          <li>
            <label>请再次输入密码</label>
            <input type="password" class="validate[equals[pw1]]">
          </li>
        </ul>
        <a class="submitBtn se2" href="javascript:void(0);">
          <span class="fText">注册<span class="to">&gt;</span></span>
          <span class="fTextHvr">注册<span class="to">&gt;</span></span>
        </a>
      </form>
    </div>
  </div>
  
  <footer>
    <div class="footer container">
      <% include _footer %>
    </div>
  </footer>
</div>
<!-- ================================================================ -->
<% include _foot %>








